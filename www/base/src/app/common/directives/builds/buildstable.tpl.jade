.row
    h4 Builds:
    span(ng-hide='builds.length>0')
      | None
    table.table.table-hover.table-striped.table-condensed(ng-show='builds.length>0')
      tr
        td(width='200px', ng-show="builders") Builder
        td(width='100px') #
        td(width='150px') Completed At
        td(width='150px') Duration
        td(width='150px') Branch
        td(width='150px') Revision
        td(width='200px') Owner
        td(width='150px') Worker
        td Status
      tr(ng-repeat='build in builds | orderBy:"-started_at"')
          td(ng-show="builders") {{ builders.get(build.builderid).name }}
          td
            a(ui-sref="build({builder:build.builderid, build:build.number})")
              span.badge-status(ng-class="results2class(build, 'pulse')")
                  span.badge-inactive 
                    | {{build.properties.build_version_reference[0]}}
                  span.badge-active(ng-if="!build.complete") {{build.properties.build_version_reference[0]}}
                  span.badge-active(ng-if="build.complete") {{results2text(build)}}
          td
            span(ng-if="build.complete_at" title="{{build.complete_at | dateformat:'LLL'}}")
              | {{build.complete_at | dateformat:'MMM DD HH:mm' }}
            span(ng-if="!build.complete_at" title="{{build.started_at | dateformat:'LLL'}}")
              | {{build.started_at | dateformat:'MMM DD HH:mm' }}
          td
            span(ng-show="build.complete", title="{{(build.complete_at - build.started_at)| durationformat:'LLL' }}")
              | {{(build.complete_at - build.started_at)| duration }}
          td
            span
              | {{build.properties.branch[0]}}
          td
            span
              | {{build.properties.revision[0]}}
          td
            span(title="{{build.properties.owner[0]}}")
              | {{ build.properties.owner[0] }}
          td
            a(ui-sref='worker({worker: build.workerid})')
              | {{build.properties.workername[0]}}
          td
            ul.list-inline
              li
                | {{build.state_string}}
